<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.wwxd.utils.ImageClipView
        android:id="@+id/icvCrop"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/transparent_white_20"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/space_15_dp"
        android:paddingTop="@dimen/space_10_dp"
        android:paddingRight="@dimen/space_15_dp"
        android:paddingBottom="@dimen/space_10_dp">

        <Button
            android:id="@+id/btnRotating"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space_15_dp"
            android:layout_weight="1"
            android:background="@drawable/bg_crop_btn"
            android:text="@string/str_rotating"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnCrop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_crop_btn"
            android:text="@string/str_crop"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>