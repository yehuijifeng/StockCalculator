<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_item_photo"
    android:layout_marginTop="@dimen/space_3_dp"
    android:layout_marginRight="@dimen/space_1_dp"
    android:layout_marginLeft="@dimen/space_1_dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgPhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop" />

    <View
        android:id="@+id/viewSelect"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_item_photo_select"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/imgSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:paddingLeft="@dimen/space_5_dp"
        android:paddingTop="@dimen/space_4_dp"
        android:paddingRight="@dimen/space_5_dp"
        android:paddingBottom="@dimen/space_4_dp"
        android:src="@drawable/select_photo" />
</FrameLayout>