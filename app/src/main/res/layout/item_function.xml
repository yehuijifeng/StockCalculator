<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_function"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgIcon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_5_dp"
                android:scaleType="center"
                android:src="@drawable/ic_pyramid" />

            <com.wwxd.subtitles.MarqueeTextView
                android:id="@+id/textName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_5_dp"
                android:layout_marginBottom="@dimen/space_5_dp"
                android:textColor="@color/color_5D6067"
                android:textSize="@dimen/text_size_16_sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_hour_dp"
                android:background="@color/color_8a8a8a" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgDel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:layout_marginTop="@dimen/space_3_dp"
            android:layout_marginRight="@dimen/space_3_dp"
            android:src="@drawable/ic_close"
            android:visibility="gone" />

    </FrameLayout>

    <View
        android:layout_width="@dimen/space_hour_dp"
        android:layout_height="match_parent"
        android:background="@color/color_8a8a8a" />
</LinearLayout>