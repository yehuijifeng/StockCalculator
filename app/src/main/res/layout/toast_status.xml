<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_toast_status"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/space_14_dp"
    android:paddingTop="@dimen/space_17_dp"
    android:paddingRight="@dimen/space_14_dp"
    android:paddingBottom="@dimen/space_17_dp">

    <ImageView
        android:id="@+id/imgStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"  />

    <TextView
        android:id="@+id/textContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_20_dp"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_14_sp" />

</LinearLayout>