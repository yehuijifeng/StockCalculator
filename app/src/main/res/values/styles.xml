<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/main_color_def</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowAnimationStyle">@style/FeelyouWindowAnimTheme</item>
        <item name="colorAccent">@color/main_color_def</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/main_color_def</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseTheme">

    </style>

    <style name="LoadingTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!--新进、旧出；旧进、新出-->
    <style name="FeelyouWindowAnimTheme" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_right_in</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_right_out</item>
    </style>

    <style name="home_menu_hour_title_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/space_hour_dp</item>
        <item name="android:background">@color/color_ececec</item>
    </style>

    <style name="home_menu_hour_item_style" parent="home_menu_hour_title_style">
        <item name="android:layout_marginLeft">@dimen/space_15_dp</item>
        <item name="android:layout_marginRight">@dimen/space_5_dp</item>
    </style>

    <style name="home_title_text_style">
        <item name="android:textSize">@dimen/text_size_17_sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="home_menu_layout_item_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_white_click</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">@dimen/space_15_dp</item>
        <item name="android:paddingTop">@dimen/space_10_dp</item>
        <item name="android:paddingRight">@dimen/space_5_dp</item>
        <item name="android:paddingBottom">@dimen/space_10_dp</item>
    </style>

    <style name="home_menu_image_item_style">
        <item name="android:layout_width">@dimen/space_40_dp</item>
        <item name="android:layout_height">@dimen/space_20_dp</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="home_menu_text_item_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/space_15_dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_15_sp</item>
    </style>

    <style name="HomeActionBar" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="actionOverflowButtonStyle">@style/OverflowButtonStyle</item>
    </style>

    <style name="OverflowButtonStyle" parent="@android:style/Widget.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_home_title_right</item>
    </style>
</resources>