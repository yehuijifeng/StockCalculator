<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/etContent"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="top|left"
        android:padding="@dimen/space_5_dp"
        android:textColor="@color/black"
        android:textSize="@dimen/space_15_dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_15_dp"
        android:layout_marginTop="@dimen/space_10_dp"
        android:layout_marginRight="@dimen/space_15_dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinnerCountriesFrom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_lauage_spinner"
            android:gravity="top|left"
            android:padding="@dimen/space_2_dp"
            android:popupBackground="@drawable/bg_lauage_spinner_list"
            android:scrollbars="none" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_3_dp"
            android:layout_marginRight="@dimen/space_2_dp"
            android:gravity="center"
            android:text="-->"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_15_sp" />

        <Spinner
            android:id="@+id/spinnerCountriesTo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_lauage_spinner"
            android:gravity="top|left"
            android:padding="@dimen/space_2_dp"
            android:popupBackground="@drawable/bg_lauage_spinner_list" />


    </LinearLayout>

    <Button
        android:id="@+id/btnCamera"
        style="@style/translation_btn_style"
        android:layout_marginLeft="@dimen/space_15_dp"
        android:layout_marginRight="@dimen/space_15_dp"
        android:text="@string/str_camera" />

    <Button
        android:id="@+id/btnPhoto"
        style="@style/translation_btn_style"
        android:layout_marginLeft="@dimen/space_15_dp"
        android:layout_marginRight="@dimen/space_15_dp"
        android:layout_marginBottom="@dimen/space_20_dp"
        android:text="@string/str_photo" />

</LinearLayout>