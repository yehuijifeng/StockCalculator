<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/space_10_dp"
        android:paddingTop="@dimen/space_15_dp"
        android:paddingRight="@dimen/space_10_dp"
        android:paddingBottom="@dimen/space_15_dp">

        <EditText
            android:id="@+id/etContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space_10_dp"
            android:layout_weight="1"
            android:background="@drawable/bg_def_edit"
            android:gravity="top|left"
            android:hint="@string/str_trans_def_tips"
            android:maxLines="8"
            android:lineSpacingExtra="@dimen/space_3_dp"
            android:paddingLeft="@dimen/space_5_dp"
            android:paddingTop="@dimen/space_8_dp"
            android:paddingRight="@dimen/space_5_dp"
            android:paddingBottom="@dimen/space_8_dp"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_17_sp" />

        <Button
            android:id="@+id/btnTranslation"
            android:layout_gravity="bottom"
            android:layout_width="@dimen/space_60_dp"
            android:layout_height="@dimen/space_40_dp"
            android:background="@drawable/bg_btn_def"
            android:text="@string/str_translation"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14_sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_15_dp"
        android:layout_marginTop="@dimen/space_10_dp"
        android:layout_marginRight="@dimen/space_15_dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinnerCountriesFrom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_lauage_spinner"
            android:gravity="top|left"
            android:padding="@dimen/space_2_dp"
            android:popupBackground="@drawable/bg_lauage_spinner_list"
            android:scrollbars="none" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_3_dp"
            android:layout_marginRight="@dimen/space_2_dp"
            android:gravity="center"
            android:text="-->"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_15_sp" />

        <Spinner
            android:id="@+id/spinnerCountriesTo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_lauage_spinner"
            android:gravity="top|left"
            android:padding="@dimen/space_2_dp"
            android:popupBackground="@drawable/bg_lauage_spinner_list" />


    </LinearLayout>


    <EditText
        android:id="@+id/etTranslation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/space_15_dp"
        android:layout_marginTop="@dimen/space_10_dp"
        android:layout_marginRight="@dimen/space_15_dp"
        android:layout_marginBottom="@dimen/space_10_dp"
        android:layout_weight="1"
        android:background="@null"
        android:gravity="top|left"
        android:padding="@dimen/space_5_dp"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_16_sp" />
</LinearLayout>