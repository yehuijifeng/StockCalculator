<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="calculator_item_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_5D6067</item>
        <item name="android:paddingTop">@dimen/space_15_dp</item>
        <item name="android:paddingBottom">@dimen/space_15_dp</item>
        <item name="android:background">@drawable/bg_calculator_item_one</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_25_sp</item>
    </style>

    <style name="calculator_item_text_style_number" parent="calculator_item_text_style">
        <item name="android:background">@drawable/bg_calculator_item_two</item>
    </style>

    <style name="calculator_item_image_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/bg_calculator_item_one</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:scaleType">center</item>
    </style>

</resources>