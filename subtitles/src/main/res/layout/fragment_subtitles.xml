<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/space_10_dp"
    android:paddingRight="@dimen/space_10_dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_10_dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space_5_dp"
            android:text="字体大小"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_25_sp" />

        <EditText
            android:id="@+id/etSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space_5_dp"
            android:background="@drawable/bg_def_edit"
            android:digits="0123456789"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="2"
            android:paddingLeft="@dimen/space_15_dp"
            android:paddingRight="@dimen/space_15_dp"
            android:text="50"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_25_sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sp"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_28_sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_10_dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space_5_dp"
            android:text="背景色"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_20_sp" />

        <ImageView
            android:id="@+id/imgBack"
            android:padding="@dimen/space_4_dp"
            android:layout_width="@dimen/space_30_dp"
            android:layout_height="@dimen/space_30_dp"
            android:background="@drawable/bg_subtitles_item"
            android:src="@color/black" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvBack"
        android:background="@color/color_ececec"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/space_10_dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_10_dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space_5_dp"
            android:text="字体颜色"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_20_sp" />

        <ImageView
            android:id="@+id/imgText"
            android:padding="@dimen/space_4_dp"
            android:layout_width="@dimen/space_30_dp"
            android:layout_height="@dimen/space_30_dp"
            android:background="@drawable/bg_subtitles_item"
            android:src="@color/black" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/color_ececec"
        android:layout_marginTop="@dimen/space_10_dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_10_dp"
        android:paddingBottom="@dimen/space_10_dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etContent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/space_5_dp"
            android:layout_weight="1"
            android:background="@drawable/bg_def_edit"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:padding="@dimen/space_5_dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_18_sp" />

        <Button
            android:id="@+id/btnGo"
            android:layout_width="@dimen/space_60_dp"
            android:layout_height="@dimen/space_35_dp"
            android:background="@drawable/bg_btn_def"
            android:text="字幕"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14_sp" />
    </LinearLayout>
</LinearLayout>