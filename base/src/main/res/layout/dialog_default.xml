<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/space_55_dp"
        android:layout_marginRight="@dimen/space_55_dp"
        android:background="@drawable/bg_dialog_default_layout"
        android:orientation="vertical"
        android:paddingTop="@dimen/space_21_dp">

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/space_18_dp"
            android:layout_marginRight="@dimen/space_18_dp"
            android:layout_marginBottom="@dimen/space_5_dp"
            android:gravity="center"
            android:lines="1"
            android:textColor="@color/color_242424"
            android:textSize="@dimen/text_size_17_sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_18_dp"
            android:layout_marginTop="@dimen/space_9_dp"
            android:layout_marginRight="@dimen/space_18_dp"
            android:textColor="@color/color_242424"
            android:textSize="@dimen/text_size_14_sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_20_dp"
            android:paddingLeft="@dimen/space_18_dp"
            android:paddingRight="@dimen/space_18_dp">

            <LinearLayout
                android:id="@+id/lyBtnTwo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_30_dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/space_30_dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btnCancel"
                    android:layout_width="@dimen/space_75_dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/space_9_dp"
                    android:background="@drawable/bg_dialog_default_clean_btn"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lines="1"
                    android:textColor="@color/color_242424"
                    android:textSize="@dimen/text_size_14_sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/space_1_dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/btnOk"
                    android:layout_width="@dimen/space_75_dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/space_9_dp"
                    android:background="@drawable/bg_dialog_default_ok_btn"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lines="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_14_sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/btnOkTwo"
                android:layout_width="@dimen/space_130_dp"
                android:layout_height="@dimen/space_34_dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/space_27_dp"
                android:background="@drawable/bg_dialog_default_ok_btn"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14_sp"
                android:visibility="invisible" />
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>